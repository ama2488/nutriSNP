<!DOCTYPE html>
<html>

<%- include ./partials/head %>

  <body>
    <%- include ./partials/navbar %>
      <div class='container'>
        <h1 class='center'><%= title %></h1>
        <h5 class='thin'> hello, <%= profile.first%>.</h5>
        <a href="#edit_profile">edit profile</a>

        <%- include ./partials/editprofile %>
          <% if(profile.age && profile.gender && profile.height && profile.weight) { %>
            <%- include ./partials/nutrition %>
              <% } else { %>
                <h5> please complete your profile </h5>
                <% }; %>
                  <% if (variants.length > 0) { %>
                    <div class='row'>
                      <div class='col s6'>
                        <h3 class='center'> Genotype </h3>
                        <% if (user) { %>
                          <% if (user.is_admin) { %>
                            <a href="#edit_snp"> Edit Data </a>
                            <% }; %>
                              <% }; %>
                                <% variants.forEach((v)=>{ %>
                                  <a href='<%=v.description%>'>
                                    <%=v.name%>
                                  </a>
                                  <h5><%=v.variant%></h5>
                                  <% }); %>
                      </div>
                      <div class='col s6'>
                        <h3 class='center'> Phenotype </h3>
                        <h5 class='thin'><%= phenotype.description %><h5>
    </div>
  </div>
<% }%>
<% if (user) { %>
  <% if (!user.ttam_profile_id) { %>
      <h5> please authorize 23andMe to view reccommendations based on your genotype. </h5>
                        <a href="/auth">Authorize 23andMe</a>
                        <% }; %>
                          <% }; %>
                            <%- include ./partials/editSNPs %>
                      </div>
  </body>

</html>
